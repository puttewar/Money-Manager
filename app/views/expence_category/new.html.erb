<div class="form">
<%= form_for @expence_category, url: expence_category_create_path, method: :post do |f| %>
	<%= render "errors" %>
	<h3> Expence Category </h3>
	 <p>
		<%= f.label :expence_source, 'Category :' %>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
		<%= f.text_field :expence_source, :placeholder => " Enter category here." %>
	 </p>


	 <p>
	   <%= f.label :description, 'Description :' %>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;
	   <%= f.text_field :description,:placeholder => " Enter amount here." %>
	 </p>

    <%= f.submit "S U B M I T", class: "btn btn-primary" %>
<% end %>
</div>