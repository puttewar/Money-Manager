<table class="table table-striped table-hover ">
  <thead>
	  <tr class="info">
		  <th> Category </th>
		  <th> Amount </th>
		  <th> Date</th>
      <th> Show</th>
		  <th> Edit</th>
		  <th> Delete</th>
		  <th></th>
	  </tr>
  </thead>
  <tbody>
    <% @reports.each do |e| %>
      <tr>
        <td> <%= e.category %> </td>
        <td> <%= e.amount %> </td>
        <td> <%= e.date %> </td>
        <td> <%= link_to "Show",expences_show_path(e) %></td>
        <td> <%= link_to "Edit",expences_edit_path(e) %></td>
        <td> <%= link_to "Delete",expences_destroy_path(e), method: :delete, data: { confirm:'are u sure?' } %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>